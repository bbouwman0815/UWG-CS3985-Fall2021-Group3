<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs4985.clinicApp.view.medications.MedicationsCodeBehind">
   <children>
      <TableView fx:id="medicationTableView" layoutX="19.0" layoutY="83.0" prefHeight="434.0" prefWidth="564.0">
        <columns>
          <TableColumn fx:id="brandTableColumn" editable="false" prefWidth="75.0" style="-fx-border-color: black;" text="Brand" />
          <TableColumn fx:id="formTableColumn" editable="false" prefWidth="75.0" style="-fx-border-color: black;" text="Form" />
            <TableColumn fx:id="dosageTableColumn" editable="false" prefWidth="75.0" style="-fx-border-color: black;" text="Dosage" />
            <TableColumn fx:id="frequencyTableColumn" editable="false" prefWidth="75.0" style="-fx-border-color: black;" text="Frequency" />
            <TableColumn fx:id="refillByTableColumn" editable="false" prefWidth="75.0" style="-fx-border-color: black;" text="Refill By" />
            <TableColumn fx:id="instructionsTableColumn" editable="false" prefWidth="123.0" style="-fx-border-color: black;" text="Special Instructions" />
            <TableColumn fx:id="refillsTableColumn" editable="false" prefWidth="64.0" style="-fx-border-color: black;" text="Refills" />
        </columns>
      </TableView>
      <Button fx:id="addMedicaitonButton" layoutX="19.0" layoutY="36.0" mnemonicParsing="false" onAction="#handleAddMedication" text="Add">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="deleteMedicationButton" layoutX="523.0" layoutY="36.0" mnemonicParsing="false" onAction="#handleDeleteMedication" text="Delete">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
