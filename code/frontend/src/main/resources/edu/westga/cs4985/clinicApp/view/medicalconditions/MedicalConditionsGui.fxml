<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.cs4985.clinicApp.view.medicalconditions.MedicalConditionsCodeBehind">
   <children>
      <TableView fx:id="medicalConditionTableView" layoutX="106.0" layoutY="128.0" prefHeight="365.0" prefWidth="389.0">
        <columns>
          <TableColumn fx:id="conditionNameTableColumn" prefWidth="75.0" style="-fx-border-color: black;" text="Name" />
          <TableColumn fx:id="conditionDiagnosedDateTableColumn" prefWidth="107.0" style="-fx-border-color: black;" text="Diagnosed Date" />
            <TableColumn fx:id="conditionTerminationTableColumn" prefWidth="112.0" style="-fx-border-color: black;" text="Termination Date" />
            <TableColumn fx:id="conditionNotesColumn" minWidth="6.0" prefWidth="93.0" style="-fx-border-color: black;" text="Notes" />
        </columns>
      </TableView>
      <Button fx:id="addMedicationConditionButton" layoutX="60.0" layoutY="58.0" mnemonicParsing="false" onAction="#handelAddMedicalCondition" text="Add">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="deleteConditionButton" layoutX="495.0" layoutY="58.0" mnemonicParsing="false" onAction="#handleDeleteMedicalCondition" text="Delete">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
