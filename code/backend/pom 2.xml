<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- project info -->
	<groupId>edu.westga.cs4985.group5</groupId>
	<artifactId>clinic_app_server</artifactId>
	<version>1.0-SNAPSHOT</version>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>11</maven.compiler.source>
		<maven.compiler.target>11</maven.compiler.target>
	</properties>

	<dependencies>
		<!-- JavaFX -->
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-controls</artifactId>
			<version>15.0.1</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-fxml</artifactId>
			<version>15.0.1</version>
		</dependency>
		<!-- JUnit 5 -->

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.1</version>
            <scope>test</scope>
        </dependency>
		<dependency>
			<groupId>org.zeromq</groupId>
			<artifactId>jeromq</artifactId>
			<version>0.5.2</version>
		</dependency>
        <dependency>
			<groupId>com.googlecode.json-simple</groupId>
            <artifactId>json-simple</artifactId>
            <version>1.1.1</version>
		</dependency>
		<!-- adding external jars into the project src and linking into the project -->
		<!--dependency> <groupId>org.openjfx</groupId> <artifactId>javafx.controls</artifactId> 
			<scope>system</scope> <version>15.0.1</version> <systemPath>${basedir}\src\lib\javafx.controls.jar</systemPath> 
			</dependency -->
	</dependencies>
	<build>
		<plugins>
			<plugin> <!-- clean lifecycle, see https://maven.apache.org/ref/current/maven-core/lifecycles.html#clean_Lifecycle -->
				<artifactId>maven-clean-plugin</artifactId>
				<version>3.1.0</version>
			</plugin>

			<plugin><!-- compiler services -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.0</version>
			</plugin>

			<plugin><!-- testing services -->
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.22.2</version>
			</plugin>

			<plugin><!-- javafx support -->
				<groupId>org.openjfx</groupId>
				<artifactId>javafx-maven-plugin</artifactId>
				<version>0.0.6</version>
				<configuration>
					<mainClass>edu.westga.cs4985.clinicApp.server.Main</mainClass>
				</configuration>
			</plugin>

			<plugin><!-- builds executable jar files -->
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.0.2</version>
				<configuration><!-- Add this configuration group to establish the main 
						class for launching the app -->
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<mainClass>
								<!-- The main class for launching the app -->
								edu.westga.cs4985.clinicApp.server.Main
							</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>

			<plugin> <!-- default lifecycle, jar packaging: see https://maven.apache.org/ref/current/maven-core/default-bindings.html#Plugin_bindings_for_jar_packaging -->
				<artifactId>maven-resources-plugin</artifactId>
				<version>3.0.2</version>
			</plugin>

		</plugins>
	</build>
</project>
