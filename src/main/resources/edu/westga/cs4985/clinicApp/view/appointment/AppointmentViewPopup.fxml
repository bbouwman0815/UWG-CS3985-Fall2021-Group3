<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="503.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Your appointment details:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="medicalPersonnelLabel" layoutX="38.0" layoutY="59.0" prefHeight="17.0" prefWidth="422.0" text="Medical Personnel:" />
      <Label fx:id="patientLabel" layoutX="38.0" layoutY="97.0" prefHeight="17.0" prefWidth="422.0" text="Patient:" />
      <Label fx:id="timeLabel" layoutX="38.0" layoutY="134.0" prefHeight="17.0" prefWidth="422.0" text="Time:" />
      <Label fx:id="locationLabel" layoutX="38.0" layoutY="172.0" prefHeight="17.0" prefWidth="422.0" text="Location:" />
      <Label layoutX="38.0" layoutY="214.0" prefHeight="17.0" prefWidth="60.0" text="Notes:" />
      <TextArea fx:id="appointmentNotes" layoutX="38.0" layoutY="237.0" prefHeight="168.0" prefWidth="394.0" />
      <Button fx:id="editButton" layoutX="83.0" layoutY="209.0" mnemonicParsing="false" onAction="#onEditNotes" text="Edit" />
      <Button fx:id="cancelAppointmentButton" layoutX="38.0" layoutY="438.0" mnemonicParsing="false" onAction="#cancelAppointment" text="Cancel Appointment" />
      <Button fx:id="OKButton" layoutX="302.0" layoutY="438.0" mnemonicParsing="false" onAction="#onOKButton" prefHeight="27.0" prefWidth="130.0" text="OK" />
      <Button fx:id="saveButton" layoutX="302.0" layoutY="438.0" mnemonicParsing="false" onAction="#saveNotes" prefHeight="27.0" prefWidth="130.0" text="Save" />
   </children>
</AnchorPane>
